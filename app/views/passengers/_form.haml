= form_for @passenger, url: passengers_path, html: {class: "form"} do |f|
  = render 'shared/form_errors', object: @passenger
  = f.hidden_field :event_id, value: params[:id]

  Leaving From:
  .form-group
    = f.label :city
    = f.text_field :city, class: "form-control", required: true
  .form-group
    = f.label :state
    = f.select :state, (@states.map {|s| [s.name, s.abbreviation]}), {prompt: "Select a state"}, class: "form-control", 'data-original' => current_user.state.to_s, required: true
  .form-group
    = f.label :zip_code
    = f.text_field :zip_code, class: "form-control", required: true
  .form-group
    = f.label :seats_requested, "Seats Needed"
    = f.number_field :seats_requested, class: "form-control", required: true

  = f.submit "Submit", class: "btn btn-primary form-submit-button"
